<h3>Create a Comment</h3>
<%= form_for [@wiki, Comment.new], remote: true do |f| %>
  <div class="form-group">
    <% f.label "Comment" %>
    <%= f.text_area :body, rows: 6, class: "form-control", placeholder: "Enter your comment here" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: "btn btn-success" %>
  </div>
<% end %>
