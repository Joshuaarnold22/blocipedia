<%= form_for [@wiki, Comment.new] do |f| %>
  <div class="form-group">
    <%= f.label "Comment" %>
    <%= f.text_area :body, rows: 6, class: "form-control", placeholder: "Enter your comment here" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: "btn btn-success", remote: true %>
  </div>
<% end %>
