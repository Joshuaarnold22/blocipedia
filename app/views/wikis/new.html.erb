<div class="container">
  <h1>New Wiki</h1>

  <div class="row">
    <div class="col-md-4">
      <p>Guidlines for Wiki</p>
      <ul>
        <li>Keep the Wiki clean and informative</li>
        <li>Add usefull information</li>
      </ul>
    </div>
    <div class="col-md-8">
      <%= form_for @wiki do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control', placeholder: "Enter your Wiki title" %>
        </div>
        <div class="form-group">
          <%= f.label :body %>
          <%= f.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter your info" %>
        </div>
        <% if current_user.role == 'admin' || current_user.role == 'premium' %>
          <div class="form-group">
            <%= f.label :private, class: 'checkbox' %>
            <%= f.check_box :private %> Private wiki
          </div>
        <% end %>
        <div class="form-group">
          <%= f.submit "Save", class: 'btn btn-success' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
