<%= content_tag :tr, id: "wiki-#{wiki.id}" do %>
  <td><%= link_to wiki.title, wiki_path(wiki.id) %></td>
  <td>
    <small>
      submitted <%= time_ago_in_words(wiki.created_at) %> ago by <%= wiki.user.name %>
    </small>
  </td>

    <% if current_user && current_user.role == "premium" %>
      <td><%= link_to "Edit", edit_wiki_path(wiki), class: 'btn btn-success btn-sm inline clear-right' %></td>
      <td><%= link_to "Delete", wiki, method: :delete, class: 'btn btn-danger btn-sm' %></td>
    <% end %>
<% end %>
